@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PAPData.Entities
@model PetAdoptionPortal.Models.ApplicationFilterViewModel

@{
    ViewBag.Title = "Applications";
    Layout = "_Layout";
}

<h1>Applications</h1>

<form asp-action="FilterApplications" method="post">
@foreach (var status in Model.ApplicationStatuses)
{
    <input type="checkbox" 
           name="SelectedAdoptionStatuses" 
           value="@status" 
           id="@status"
           @(Model.SelectedAdoptionStatuses != null && Model.SelectedAdoptionStatuses.Contains(status) ? "checked" : "") />
    <label for="@status">@status</label>
}
<button class="button small" type="submit">Filter
    </button>
</form>

@if (Model.Applications.Any())
{
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Client ID</th>
            <th>Client Name</th>
            <th>Pet ID</th>
            <th>Pet Name</th>
            <th>Application Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var app in Model.Applications)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@app.Id" style="color:#f2849e; font-weight: bold;">@app.Id</a></td>
                <td>@app.ClientId</td>
                <td>@app.Client.FirstName @app.Client.LastName</td>
                <td>@app.PetId</td>
                <td>@app.Pet.Name</td>
                <td>@app.ApplicationDate.ToShortDateString()</td>
                <td style="color: @(app.Status == AdoptionStatus.Rejected ? "red" : (app.Status == AdoptionStatus.Approved ? "green" : "black"))">
                    @app.Status
                </td>
                <td>
                    @if (app.Status == AdoptionStatus.Pending)
                    {
                        <form asp-action="ApproveApplication" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@app.Id" />
                            <button type="submit" style="all: unset; cursor: pointer;">
                                <img src="/images/Gray_tick.png" alt="Approve" width="37" height="37">
                            </button>
                        </form>
                        <form asp-action="RejectApplication" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@app.Id" />
                            <button type="submit" style="all: unset; cursor: pointer;">
                                <img src="/images/reject.png" alt="Reject" width="35" height="35">
                            </button>
                           
                        </form>
                    }
                    @if (app.Status == AdoptionStatus.Approved || app.Status == AdoptionStatus.Rejected)
                    {
                        <span><strong>Completed</strong></span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No applications found.</p>
}