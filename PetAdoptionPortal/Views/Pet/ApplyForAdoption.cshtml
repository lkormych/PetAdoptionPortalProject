@model AdoptionPreviewViewModel

@{
    ViewBag.Title = "Adopt me";
    Layout = "_Layout";
}

<h2>Hi, @Model.ClientName! </h2>
<h2>I am so glad that you want to adopt me!</h2>
<span class="image left"><img src="@Model.DogImage" alt=""/>
    <span style="position: inherit; font-weight: bold; color:#f2849e;">@Model.PetName, @Model.PetBreed</span>
    </span>

@if (ViewBag.ApplicationExists != null)
{
    <p style="color:#f2849e; font-weight: bold; font-size: 22px;">@ViewBag.ApplicationExists</p>
}
else
{
    <p>Have you already seen our <a asp-route="Index" style="color:#f2849e;">Adoption Policy</a>?</p>
    <p>Please review your data below, so that we keep in touch with you via e-mail!</p>

    <form asp-action="ConfirmAdoption">
        <input type="hidden" asp-for="PetId" />
        <input type="hidden" asp-for="ClientId" />
        <input type="hidden" asp-for="PetName" />
        <input type="hidden" asp-for="PetBreed" />
        <input type="hidden" asp-for="DogImage" />
        <div class="row gtr-uniform">
            <div class="col-12">
                <label asp-for="ClientName"></label>
                <input asp-for="ClientName" class="form-control"/>
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ClientSurname"></label>
                <input asp-for="ClientSurname" class="form-control"/>
                <span asp-validation-for="ClientSurname" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ClientEmail"></label>
                <input asp-for="ClientEmail" type="text" class="form-control" style="width:100%"/>
                <span asp-validation-for="ClientEmail" class="text-danger"></span>
            </div>
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <ul class="actions">
                    <li><input type="submit" value="Adopt me!" class="primary" style="margin-top:30px;"/></li>
                </ul>
            </div>
        </div>

    </form>
}
<a class="button small" asp-action="Details" asp-route-id="@Model.PetId">Go back</a>

