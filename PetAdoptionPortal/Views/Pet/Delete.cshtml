@model PAPData.Entities.Pet

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.Name, @Model.Breed</h1>

<div class="col-4">
    <span class="image left"><img src="@Model.PictureUrl" alt=""/></span>
    <h3 style="color:#f2849e;">Are you sure you want to delete this listing?</h3>
    <hr />
    <form asp-action="Delete" asp-route-id="@Model.PetId" method="post">
        <input type="submit" value="Delete" class="button large" style="margin-top: 0;"/>  
        <span style="margin-left: 10px; margin-right: 10px;">|</span>
        <a asp-action="Details" asp-route-id="@Model.PetId" style>Go back</a>
    </form>
</div>

   
  

