<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <title>@ViewData["Title"] - PetAdoptionPortal</title>
    <link rel="stylesheet" href="/css/main.css" />
    <noscript><link rel="stylesheet" href="/css/noscript.css" /></noscript>
</head>
<body class="is-preload">
<!-- Wrapper -->
<div id="wrapper">

    <!-- Header -->
    <header id="header">
        <div class="inner">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="symbol"><img src="/images/logo.png" alt="Logo" /></span>
                <span class="title">Pet Adoption Portal</span>
            </a>
            <!-- Navigation -->
            
            <nav>
                <ul>
                    <li><a href="#menu">Menu</a></li>
                </ul>
            </nav>
           
        </div>
    </header>

    <!-- Menu -->
    <nav id="menu">
        <h2>Menu</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            <li><a asp-area="" asp-controller="Pet" asp-action="Index">Pets</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div id="main">
        <div class="inner">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="inner">
            <section>
                <h2>Get in touch</h2>
                <form method="post" action="#">
                    <div class="fields">
                        <div class="field half">
                            <input type="text" name="name" id="name" placeholder="Name" />
                        </div>
                        <div class="field half">
                            <input type="email" name="email" id="email" placeholder="Email" />
                        </div>
                        <div class="field">
                            <textarea name="message" id="message" placeholder="Message"></textarea>
                        </div>
                    </div>
                    <ul class="actions">
                        <li><input type="submit" value="Send" class="primary" /></li>
                    </ul>
                </form>
            </section>
            <section>
                <h2>Follow</h2>
                <ul class="icons">
                    <li><a href="#" class="icon brands style2 fa-twitter"><span>Twitter</span></a></li>
                    <li><a href="#" class="icon brands style2 fa-facebook"><span>Facebook</span></a></li>
                    <li><a href="#" class="icon brands style2 fa-instagram"><span>Instagram</span></a></li>
                    <li><a href="#" class="icon brands style2 fa-linkedin"><span>LinkedIn</span></a></li>
                </ul>
            </section>
        </div>
    </footer>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/js/browser.min.js"></script>
<script src="/js/breakpoints.min.js"></script>
<script src="/js/util.js"></script>
<script src="/js/main.js"></script>


@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
