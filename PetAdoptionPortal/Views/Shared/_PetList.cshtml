@using PAPData.Entities
@model PAPData.Entities.Pet

@if (Model == null)
{
    <h1>Oops!</h1>
    <p class="text-danger">Sorry, the pet details you're looking for are not available.</p>
}
else
{
    <span class="image main"><img src="@Model.PictureUrl" alt="" /></span>
    <h1>@Model.Name</h1>
    <div class="edit-container">
    <h3>@Model.Breed 
    
        @if (User.IsInRole("Admin"))
        {
            <ul class="icons" style="display: flex; justify-content: flex-end; padding: 0; margin-top: -2.2em; list-style: none;">
                <li style="margin-left: 10px;">
                    <a asp-action="Edit" asp-route-id="@Model.PetId">
                        <img src="~/images/edit.png" class="detail-icon" style="height: 1.8em; width: 1.8em;">
                    </a>
                </li>
                <li style="margin-left: 10px;">
                    <a asp-action="Delete" asp-route-id="@Model.PetId">
                        <img src="~/images/delete.png" class="detail-icon" style="height: 1.8em; width: 1.8em;">
                    </a>
                </li>
            </ul>
        }
    </h3>
    </div>
    <section>
        <div class="table">
            <table>
                <tbody>
                <tr>
                    <td><strong>Age:</strong></td>
                    <td>@Model.Age </td>
                </tr>
                <tr>
                    <td><strong>Gender:</strong></td>
                    <td>@Model.Gender </td>
                </tr>
                <tr>
                    <td><strong>Adoption Price:</strong></td>
                    <td>@Model.AdoptionPrice.ToString("C")</td>
                </tr>
                <tr>
                    <td><strong>Castrated:</strong></td>
                    <td>@Model.IsCastrated </td>
                </tr>
                <tr>
                    <td><strong>Coat:</strong></td>
                    <td>@Model.Coat </td>
                </tr>
                <tr>
                    <td><strong>Size:</strong></td>
                    <td>@Model.Size </td>
                </tr>
                <tr>
                    <td><strong>Affectionate:</strong></td>
                    <td>@Model.IsAffectionate </td>
                </tr>
                <tr>
                    <td><strong>Location:</strong></td>
                    <td>@Model.Location </td>
                </tr>
                <tr>
                    <td><strong>Activity:</strong></td>
                    <td>@Model.ActivityLevel </td>
                </tr>
                <tr>
                    <td><strong>Color:</strong></td>
                    <td>@Model.Color </td>
                </tr>
                <tr>
                    <td><strong>Status:</strong></td>
                    <td>@Model.Status </td>
                </tr>
                </tbody>
            </table>
    
        </div>
        <h3>Description</h3>
        <p>@Model.Description</p>
        <p></p>
    </section>
}

@if (!User.IsInRole("Admin") && Model.Status == PetStatus.Available)
{
    <a class="button large" asp-action="ApplyForAdoption" asp-route-id="@Model.PetId">Apply for adoption</a>
}
<br/>
<a class="button small" asp-action="Index">Go back</a>